<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_card_view"
        android:layout_width="match_parent"
        android:background="@color/background_floating_material_light"
        android:layout_height="300dp"
        app:layout_behavior="@string/bottom_sheet_behavior" android:focusable="false" android:elevation="6dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="fill_parent"
        android:layout_height="277dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placeTypeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:src="@drawable/ic_place_black_24dp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:alpha=".87"
                    android:paddingLeft="16dp"
                    android:text="Place name"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/placeAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:alpha=".87"
                    android:paddingLeft="16dp"
                    android:text="Place address"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/abc_floating_window_z" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/placePhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha=".87"
                android:drawableStart="@drawable/ic_call_black_24px"
                android:drawablePadding="30dp"
                android:text="Phone"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/abc_floating_window_z" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <LinearLayout
            android:id="@+id/linkLayout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/placeUrl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha=".87"
                android:autoLink="web"
                android:drawableStart="@drawable/ic_public_black_24px"
                android:drawablePadding="30dp"
                android:text="URL"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/abc_floating_window_z" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/placeType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha=".87"
                android:drawableStart="@drawable/ic_place_black_24dp"
                android:drawablePadding="30dp"
                android:text="Phone"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/abc_floating_window_z" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addFavorite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha=".87"
                android:drawableStart="@drawable/plus"
                android:drawablePadding="30dp"
                android:text="Add to favorites"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/abc_floating_window_z" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />
    </android.support.v7.widget.LinearLayoutCompat>
    </FrameLayout>
